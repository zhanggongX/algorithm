;M.add("uix-smoothscroll",function(e){function t(t,o){if(t=e.one(t)){var i={trigger:"a",extraNode:"",extraNodeSign:1,extraPx:0,easing:"easeOutStrong",scrollBox:e.config.win};o=e.merge(i,o||{}),t.delegate("click",function(t){t.preventDefault();var i=e.one(o.scrollBox)||e.one(e.config.win),n=this.getData("scroll"),r=n&&e.one(n),a=e.one(o.extraNode),s=0,g=0,l=0;if(r)if(i===e.one(e.config.win))s=r.getY();else{if(!r.ancestor(o.scrollBox))return;var f="static"!==i.getStyle("position");f||i.setStyle("position","relative");var c=r.get("offsetParent");for(s+=r.get("offsetTop");c&&c!==i;)s+=c.get("offsetTop"),c=c.get("offsetParent");if(c!==i)return;f||i.setStyle("position","static")}else if(n){var u=n.match(/^(\d+)(px)?$/i);u&&e.Lang.isNumber(Number(u[1]))&&(s=Number(u[1]))}a&&6!==e.UA.ie&&(l=o.extraNodeSign*a.get("offsetHeight")),s+=l+o.extraPx,g=Math.abs(s-i.get("scrollTop")),e.UA.ie&&e.UA.ie<9?i.set("scrollTop",s):new e.Anim({node:i,duration:e.mt.lang.clamp(g/1e3,.2,.6),to:{scroll:[0,s]},easing:o.easing?o.easing:"easeOutStrong"}).run()},o.trigger)}}e.namespace("mt.uix"),e.mt.uix.Smoothscroll=t},"1.0.0",{requires:["mt-base","anim","node"]});
